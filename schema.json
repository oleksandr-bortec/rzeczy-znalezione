{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dane.gov.pl/schemas/rzeczy-znalezione/v2.0.0",
  "title": "Rzeczy Znalezione - Wzorcowy Zakres Danych",
  "description": "Standard danych dla rzeczy znalezionych udostępnianych w portalu dane.gov.pl. Zgodny z ustawą z dnia 20 lutego 2015 r. o rzeczach znalezionych.",
  "version": "2.0.0",
  "type": "object",
  "required": ["metadata", "data"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Metadane zbioru danych",
      "required": ["title", "description", "category", "created"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Tytuł zbioru danych",
          "example": "Rzeczy Znalezione - Powiat Krakowski"
        },
        "description": {
          "type": "string",
          "description": "Opis zbioru danych",
          "example": "Rejestr rzeczy znalezionych prowadzony przez Starostwo Powiatowe w Krakowie"
        },
        "category": {
          "type": "string",
          "description": "Kategoria zgodna z dane.gov.pl",
          "enum": [
            "government_and_public_sector",
            "justice_legal_system_and_public_safety",
            "regions_and_cities"
          ],
          "default": "government_and_public_sector"
        },
        "update_frequency": {
          "type": "string",
          "description": "Częstotliwość aktualizacji",
          "enum": ["daily", "weekly", "monthly", "quarterly", "annually", "as_needed"],
          "default": "weekly"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Data utworzenia zbioru"
        },
        "modified": {
          "type": "string",
          "format": "date-time",
          "description": "Data ostatniej modyfikacji"
        },
        "source": {
          "type": "string",
          "description": "Źródło danych",
          "example": "Biuro Rzeczy Znalezionych"
        },
        "publisher": {
          "type": "object",
          "description": "Wydawca danych",
          "properties": {
            "name": {
              "type": "string",
              "description": "Nazwa instytucji"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "Email kontaktowy"
            },
            "phone": {
              "type": "string",
              "description": "Telefon kontaktowy"
            },
            "address": {
              "type": "string",
              "description": "Adres instytucji"
            }
          }
        },
        "license": {
          "type": "string",
          "description": "Licencja danych",
          "enum": ["CC0 1.0", "CC BY 4.0", "CC BY-SA 4.0"],
          "default": "CC0 1.0"
        },
        "language": {
          "type": "string",
          "description": "Język danych",
          "default": "pl"
        }
      }
    },
    "data": {
      "type": "array",
      "description": "Lista rzeczy znalezionych",
      "items": {
        "$ref": "#/definitions/RzeczZnaleziona"
      }
    }
  },
  "definitions": {
    "RzeczZnaleziona": {
      "type": "object",
      "description": "Pojedynczy rekord rzeczy znalezionej zgodny z ustawą z dnia 20 lutego 2015 r.",
      "required": [
        "id",
        "item_name",
        "category",
        "description",
        "date_found",
        "location_found",
        "municipality",
        "county",
        "voivodeship",
        "status",
        "collection_deadline",
        "lost_and_found_office",
        "entry_date"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unikalny identyfikator rzeczy znalezionej",
          "pattern": "^[A-Z]{2,3}/\\d{4}/\\d{4,}$",
          "example": "RZ/2024/0001"
        },
        "item_name": {
          "type": "string",
          "description": "Nazwa przedmiotu",
          "minLength": 3,
          "maxLength": 200,
          "example": "Telefon Samsung Galaxy"
        },
        "category": {
          "type": "string",
          "description": "Kategoria przedmiotu",
          "enum": [
            "phone",
            "documents",
            "jewelry",
            "keys",
            "wallet",
            "clothing",
            "electronics",
            "bicycle",
            "other"
          ]
        },
        "category_pl": {
          "type": "string",
          "description": "Kategoria przedmiotu (polska nazwa)",
          "enum": [
            "Telefon",
            "Dokumenty",
            "Biżuteria",
            "Klucze",
            "Portfel",
            "Odzież",
            "Elektronika",
            "Rower",
            "Inne"
          ]
        },
        "description": {
          "type": "string",
          "description": "Szczegółowy opis przedmiotu (kolor, cechy szczególne)",
          "minLength": 10,
          "maxLength": 2000,
          "example": "Telefon Samsung Galaxy S23, kolor czarny, pęknięty ekran w lewym górnym rogu, etui silikonowe niebieskie"
        },
        "date_found": {
          "type": "string",
          "format": "date",
          "description": "Data znalezienia przedmiotu (YYYY-MM-DD)",
          "example": "2024-01-15"
        },
        "location_found": {
          "type": "string",
          "description": "Dokładny adres lub opis miejsca znalezienia",
          "minLength": 5,
          "maxLength": 500,
          "example": "Autobus linii 144, przystanek Rynek Główny"
        },
        "location_type": {
          "type": "string",
          "description": "Typ miejsca znalezienia",
          "enum": [
            "public_transport",
            "office",
            "shop",
            "park",
            "street",
            "parking",
            "school",
            "hospital",
            "other"
          ]
        },
        "coordinates": {
          "type": "object",
          "description": "Współrzędne geograficzne miejsca znalezienia (opcjonalne)",
          "properties": {
            "lat": {
              "type": "number",
              "description": "Szerokość geograficzna",
              "minimum": -90,
              "maximum": 90
            },
            "lon": {
              "type": "number",
              "description": "Długość geograficzna",
              "minimum": -180,
              "maximum": 180
            }
          },
          "required": ["lat", "lon"]
        },
        "municipality": {
          "type": "string",
          "description": "Gmina",
          "example": "Kraków"
        },
        "county": {
          "type": "string",
          "description": "Powiat",
          "example": "Kraków"
        },
        "voivodeship": {
          "type": "string",
          "description": "Województwo",
          "enum": [
            "dolnośląskie",
            "kujawsko-pomorskie",
            "lubelskie",
            "lubuskie",
            "łódzkie",
            "małopolskie",
            "mazowieckie",
            "opolskie",
            "podkarpackie",
            "podlaskie",
            "pomorskie",
            "śląskie",
            "świętokrzyskie",
            "warmińsko-mazurskie",
            "wielkopolskie",
            "zachodniopomorskie"
          ],
          "example": "małopolskie"
        },
        "estimated_value": {
          "type": "number",
          "description": "Szacunkowa wartość przedmiotu w PLN (wymagane jeśli > 100 PLN)",
          "minimum": 0,
          "example": 2500
        },
        "status": {
          "type": "string",
          "description": "Aktualny status przedmiotu",
          "enum": [
            "stored",
            "returned",
            "liquidated"
          ],
          "default": "stored"
        },
        "status_pl": {
          "type": "string",
          "description": "Aktualny status przedmiotu (polska nazwa)",
          "enum": [
            "Przechowywany",
            "Zwrócony właścicielowi",
            "Zlikwidowany"
          ]
        },
        "collection_deadline": {
          "type": "string",
          "format": "date",
          "description": "Termin odbioru (2 lata od znalezienia zgodnie z ustawą)",
          "example": "2026-01-15"
        },
        "lost_and_found_office": {
          "type": "object",
          "description": "Dane Biura Rzeczy Znalezionych",
          "required": ["name", "address", "phone"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Nazwa biura",
              "example": "Biuro Rzeczy Znalezionych Starostwa Powiatowego"
            },
            "address": {
              "type": "string",
              "description": "Adres biura",
              "example": "ul. Główna 1, 31-000 Kraków"
            },
            "phone": {
              "type": "string",
              "description": "Telefon kontaktowy",
              "pattern": "^[\\+]?[\\d\\s\\-\\(\\)]{9,}$",
              "example": "+48 12 345 67 89"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "Email kontaktowy",
              "example": "rzeczy.znalezione@powiat.krakow.pl"
            },
            "opening_hours": {
              "type": "string",
              "description": "Godziny otwarcia",
              "example": "Pon-Pt: 8:00-16:00"
            }
          }
        },
        "entry_date": {
          "type": "string",
          "format": "date",
          "description": "Data wpisu do rejestru",
          "example": "2024-01-15"
        },
        "update_date": {
          "type": "string",
          "format": "date",
          "description": "Data ostatniej aktualizacji rekordu",
          "example": "2024-01-20"
        },
        "photo_url": {
          "type": "string",
          "format": "uri",
          "description": "Link do zdjęcia przedmiotu",
          "example": "https://example.com/zdjecia/rz-2024-0001.jpg"
        },
        "notes": {
          "type": "string",
          "description": "Dodatkowe uwagi lub informacje",
          "maxLength": 1000
        }
      }
    }
  },
